<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= title || "Phishtopia" %>
    </title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&family=Londrina+Shadow&family=Modak&family=Pompiere&display=swap"
        rel="stylesheet">

    <!-- Local Fonts -->
    <style>
        @font-face {
            font-family: 'Shentox';
            src: url('https://web.ccpgamescdn.com/aws/webfonts/shentox/webfonts-2.0/Shentox-Medium.woff2') format('woff2');
            font-weight: 500;
            font-style: normal;
            font-display: swap;
        }

        @font-face {
            font-family: 'Eve Alpha';
            src: url('/styles/evealpha_bold.ttf') format('truetype');
            font-weight: 700;
            font-style: bold;
            font-display: swap;
        }
    </style>

    <!-- Bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">

    <!-- Main Styles -->
    <link rel="stylesheet" href="/styles/main.css">

    <!-- Extra Styles -->
    <% if (extraStyles) { %>
        <% if (Array.isArray(extraStyles)) { %>
            <% extraStyles.forEach(src=> { %>
                <link rel="stylesheet" href="<%= src %>">
                <% }) %>
                    <% } else { %>
                        <link rel="stylesheet" href="<%= extraStyles %>">
                        <% } %>
                            <% } %>
</head>

<body class="<%= bodyClass || '' %>">
    <canvas id="bubble-canvas"></canvas>

    <!-- Nav Bar -->
    <nav class="navbar navbar-expand-lg bg-body-tertiary gradient-background">
        <div class="container-fluid">
            <a class="navbar-brand" href="https://phishtopia.com"><img src="/res/images/phishLogo.png" alt="Phishtopia"
                    class="logo"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                            aria-expanded="false">
                            Projects Showcase
                        </a>
                        <ul class="dropdown-menu gradient-background">
                            <li><a class="dropdown-item" href="/projects">Projects</a></li>
                            <li><a class="dropdown-item" href="/contact">Got a Question?</a></li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link <%= bodyClass === 'playint' ? 'active' : '' %>" href="/PlayerInt">Echoes
                            PlayInt</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>